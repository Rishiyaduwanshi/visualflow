# VisualFlow Environment Configuration
# Copy this file to visualflow/.env and update with your values

# Database Configuration (PostgreSQL)
DB_NAME=visualflow_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here
DB_HOST=localhost
DB_PORT=5432

# SSL Configuration (for cloud databases like Aiven, AWS RDS)
DB_SSL_REQUIRE=false
DB_SSL_MODE=prefer
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=
DB_SSL_CA_PATH=
# CA Certificate content (paste your CA cert here for cloud databases)
DB_SSL_CA_CERT=

# AI/ML API Keys (Required)
GROQ_API_KEY=your_groq_api_key_here
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=visualflow

# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production-12345
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Application Configuration
APP_NAME=VisualFlow
APP_VERSION=1.0.0

# Example for Cloud PostgreSQL (uncomment and modify as needed)
# DB_NAME=your_cloud_db_name
# DB_USER=your_cloud_user  
